<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.androidbanking.TellerMain">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="144dp"
        android:layout_gravity="bottom"
        android:gravity="center|center_horizontal"
        android:id="@+id/linearLayout3"
        android:weightSum="1"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">

        <Button
            android:layout_width="126dp"
            android:layout_height="wrap_content"
            android:text="ManageFunds"
            android:id="@+id/ManageFundsB"
            android:layout_gravity="bottom"
            android:textSize="15dp"
            android:gravity="center_vertical|center_horizontal" />

        <Button
            android:layout_width="124dp"
            android:layout_height="wrap_content"
            android:text="CloseAccount"
            android:id="@+id/CloseAccountB"
            android:textSize="15dp"
            android:layout_gravity="bottom"
            android:gravity="center_vertical|center_horizontal" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="104dp"
        android:id="@+id/linearLayout4"
        android:layout_above="@+id/linearLayout3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

       <TextView
            android:text="Find Customer"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/findUserTxt"
            android:textSize="15dp"
            android:textAlignment="gravity"
            android:gravity="center_horizontal"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:layout_weight="0.02"
            android:layout_gravity="center_horizontal" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:text="Select"
                android:id="@+id/SelectB"
                android:layout_weight="0.02" />

            <AutoCompleteTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/autoCompleteTextView"
                android:layout_weight="0.08"
                android:layout_gravity="center_vertical|center|left"
                android:paddingLeft="0dp"
                android:paddingRight="60dp"
                android:gravity="center|center_vertical|center_horizontal"
                android:textAlignment="center"
                android:theme="@style/AppBaseTheme" />

        </LinearLayout>

    </LinearLayout>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:id="@+id/button3"
        android:layout_toEndOf="@+id/linearLayout3"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/linearLayout4"
        android:layout_alignEnd="@+id/linearLayout4" />

</RelativeLayout>
